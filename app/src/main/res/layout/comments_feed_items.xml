<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/comments_cardView"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:weightSum="4"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1.5">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="This is a Name."
                    android:textSize="14sp"
                    android:id="@+id/comments_feed_userName"
                    android:layout_weight="1"
                    android:textStyle="bold">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="29/03/2009"
                    android:textSize="10sp"
                    android:id="@+id/comments_feed_date"
                    android:layout_weight="0.25">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textSize="10sp"
                    android:id="@+id/comments_feed_time"
                    android:layout_weight="0.25">

                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2.5"
                android:weightSum="1">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="This is a comment."
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:id="@+id/comments_feed_comment"
                    android:layout_weight="0.9">

                </com.google.android.material.textview.MaterialTextView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove"
                    android:layout_weight="0.1"
                    android:id="@+id/comments_feed_deleteButton"
                    android:layout_gravity="bottom"
                    android:visibility="gone">

                </ImageView>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="This is a userID."
                android:textSize="14sp"
                android:id="@+id/comments_feed_userID"
                android:visibility="gone">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="This is a Key."
                android:textSize="14sp"
                android:id="@+id/comments_feed_key"
                android:visibility="gone">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="This is a News Key."
                android:textSize="14sp"
                android:id="@+id/comments_feed_newsKey"
                android:visibility="gone">

            </com.google.android.material.textview.MaterialTextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>