<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="4dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_name"
                        android:paddingLeft="58dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_email"
                        android:paddingLeft="60dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_number"
                        android:paddingLeft="44dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_address"
                        android:paddingLeft="42dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Programme:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Programme"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_programme"
                        android:paddingLeft="20dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course ID:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course ID"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_courseID"
                        android:paddingLeft="32dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Name:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course Name"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_courseName"
                        android:paddingLeft="8dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User ID:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User ID"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_userID"
                        android:paddingLeft="49dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 1:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 1"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_sub1"
                        android:paddingLeft="36dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 2:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 2"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_sub2"
                        android:paddingLeft="36dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 3:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 3"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_sub3"
                        android:paddingLeft="36dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 4:"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject 4"
                        android:textSize="14sp"
                        android:textColor="@color/textColour"
                        android:id="@+id/lecturer_item_sub4"
                        android:paddingLeft="36dp">

                    </com.google.android.material.textview.MaterialTextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_marginTop="16dp"
                    android:id="@+id/lecturer_item_manageButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton">

                </com.google.android.material.button.MaterialButton>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/useravatar"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/lecturer_item_image">

                </de.hdodenhof.circleimageview.CircleImageView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>